{
	"manifest_version": 2,

	"name": "GTmetrix Analyzer Plugin",
	"description": "This extension will analyze a page using GTmetrix",
	"version": "1.0",

	"browser_action": {
		"default_icon": "sweeterman.jpg",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab"
   ],

	"content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "popup.js"
            ],
            "run_at": "document_end"
        }
    ]
}